---
import type { ImageMetadata } from 'astro';
type Props = {
  imageMd: ImageMetadata;
  imageSm: ImageMetadata;
};
import { getImage } from 'astro:assets';
const { imageMd, imageSm } = Astro.props;
const optimizedMd = await getImage({ src: imageMd });
const optimizedSm = await getImage({ src: imageSm });
---

<picture>
  <source
    srcset={optimizedMd.src}
    media="(min-width: 40em)"
    width={optimizedMd.options.width}
    height={optimizedMd.options.height}
  />
  <img
    src={optimizedSm.src}
    alt="アートディレクションサンプル"
    width={optimizedSm.options.width}
    height={optimizedSm.options.height}
    loading={optimizedSm.options.loading}
    decoding={optimizedSm.options.decoding}
  />
</picture>
