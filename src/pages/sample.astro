---
import BaseLayout from '@/layouts/Base.astro';
import PageHeader from '@/blocks/PageHeader.astro';
import SampleHero from '@/blocks/Sample/SampleHero.astro';
import SampleStatement from '@/blocks/Sample/SampleStatement.astro';
import SampleSection from '@/blocks/Sample/SampleSection.astro';
import SampleIcons from '@/blocks/Sample/SampleIcons.astro';
import SampleQA from '@/blocks/Sample/SampleQA.astro';
import SampleBanner from '@/blocks/Sample/SampleBanner.astro';
import SampleImages from '@/blocks/Sample/SampleImages.astro';

const title = 'Sample';
const description = 'よくありそうな感じのシンプルなWebサイトのサンプル。';
---

<BaseLayout title={title} description={description}>
  <PageHeader title={title} description={description} />
  <SampleHero />
  <SampleStatement />
  <SampleSection />
  <SampleQA />
  <SampleIcons />
  <SampleImages />
  <SampleBanner />
</BaseLayout>
