---
import projectData from '@/data/project.ts';
const { siteName } = projectData;
import linkList from '@/data/links.ts';
import Icon from '@/components/Icon/Icon.svelte';
const references = [
  { href: `https://astro.build/`, label: 'astro' },
  { href: `https://svelte.jp/`, label: 'svelte' },
  { href: `https://storybook.js.org/`, label: 'storybook' },
];
const date = '20240906';
---

<footer class="common-footer">
  <div class="common-footer_inner">
    <ul class="common-footer_links" data-role="navi">
      {
        linkList.map((link) => (
          <li>
            <a href={link.href} class="common-footer_link">
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
    <ul class="common-footer_links">
      {
        references.map((link) => (
          <li>
            <a href={link.href} target="_blank">
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="common-footer_head">
      <div class="common-footer_title">
        <Icon name="code-bracket" size="3rem" />
      </div>
      <div class="common-footer_updated">Updated:<span class="common-footer_date">{date}</span></div>
      <div class="common-footer_copy">&copy;{new Date().getFullYear()} {siteName}</div>
    </div>
  </div>
</footer>

<style lang="scss">
  @use '@/styles/_develop/+' as *;

  .common-footer {
    padding: 0 var(--space-inline);
    border-top: 1px solid var(--color-border);

    @include min-screen(md) {
      border-top: 0;
    }
  }

  .common-footer_inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 1lh 1em;
    min-height: 6lh;
    padding: 1.5lh 0;

    @include min-screen(md) {
      grid-template-columns: 10em 10em 1fr;
      grid-gap: 0.5lh 1em;
      border-top: 1px solid var(--color-border);
    }
  }

  .common-footer_links {
    display: flex;
    flex-direction: column;
    gap: 0.125lh;

    a {
      font-size: var(--typo-size-70);
      text-transform: capitalize;
    }
  }

  .common-footer_head {
    display: flex;
    flex: 1;
    flex-direction: column;
    grid-column: 1 / 3;
    text-align: left;

    @include min-screen(md) {
      grid-column: auto;
      text-align: right;
    }
  }

  .common-footer_title {
    display: block;
    margin-block-start: 0.5lh;

    @include min-screen(md) {
      flex: 1;
      margin-block: 0 auto;
      margin-inline-start: auto;
    }
  }

  .common-footer_updated {
    margin-block-start: 0.125lh;
    font-size: var(--typo-size-50);
    font-weight: var(--typo-weight-bold);
    text-transform: uppercase;
  }

  .common-footer_date {
    margin-inline-start: 0.25em;
  }

  .common-footer_copy {
    margin-block-start: 0.5lh;
    font-size: var(--typo-size-50);
    line-height: var(--typo-lh-sm);

    @include min-screen(md) {
      margin-block-start: auto;
    }
  }
</style>
